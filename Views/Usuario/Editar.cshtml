@model PortifolioMVC.Models.Usuario;


@{
    ViewData["Title"] = "Editar Usuario";
}

 <div id="wrapper">
        
        <h1>Editar Usuario</h1>
    
        <p id="pMensagem">@ViewBag.Mensagem</p>
    </div>

    <div >
 
            <form asp-action="Editar" method="POST">
                <input type="hidden" asp-for="idusuario">
                <p class="posicao-Input">
                    <label asp-for=nomeusuario >nome </label>
                    <input asp-for=nomeusuario required />                
                </p>

                    <p class="posicao-Input">
                    <label asp-for=login >Login </label>
                    <input asp-for=login required/>
                </p>

                <p class="posicao-Input">
                    <label asp-for=senha >Senha</label>
                    <input asp-for=senha required/>
                </p>

                    <p class="posicao-Input">
                    <label asp-for=tipousuario >Tipo de Acesso: Administrador ou Aluno</label>
                    <input  asp-for=tipousuario required/>
                </p>

              
                    
                    <button type="submit">Editar Usuario </button>

            </form>

      
         
        
    </div>