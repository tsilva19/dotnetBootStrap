@using Microsoft.AspNetCore.Http
<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortifolioMVC</title>
     <link rel="stylesheet" href="~/css/site.css" />
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 

</head>
<body>
    <header>
         <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
      <a class="navbar-brand" href="#">PortifolioMVC</a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" 
      data-target="#links-topo" aria-controls="links-topo" aria-expanded="false">  
      <span class="navbar-toggler-icon"></span>
  </button>
      <div class="collapse navbar-collapse" id=" links-topo">     
          <ul class="navbar-nav mr-4">
              <li class="nav-item">
                  @if(Context.Session.GetInt32("idusuario") == null){
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Acesso ao Portifolio de Aulas</a>
                            }                        
              </li>
             

                  
                @if(Context.Session.GetString("tipousuario") == "Administrador"){
                  <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Cadastro">Cadastro de Video Aula</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Cadastro">Cadastro de Alunos</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Lista">Video Aulas</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Listar">Listar Alunos Cadastrados</a>
                   </li>

                }     
                                
              <li class="nav-item">
                   <a  class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Sobre</a>
              </li>
               @if(Context.Session.GetString("tipousuario") == "Aluno"){
              <li class="nav-item">
                 
                 <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Lista">Video Aulas</a>
            </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Listar">Listar Alunos Cadastrados</a>
                   </li>
                }
                  
              
             
          </ul>
      </div>
  </nav>
          
        
            @if(Context.Session.GetInt32("idusuario") != null)
                {
                    <span>Olá @Context.Session.GetString("nomeusuario")  - <a style="text-decoration=none; color=white; font-weight: bold; " asp-action="Logout">Sair</a></span>                    
                }
        
    </header>
    
