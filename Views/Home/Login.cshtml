@model PortifolioMVC.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<section class="contato">
      <div class="container">
          <form asp-action="Login" method="POST" >
              <div class="row">
                  <div class="col-lg-4 col-md-4 col-sm-12">
                    <h1>Login</h1>
                     <h3>Entre com o usuario admin e senha admin</h3>
                     <p id="pMensagem">@ViewBag.Mensagem</p>
                  </div>
                  <div class="col-lg-8 col-md-8 col-sm-12 right">
                     <div class="form-group">
                       <input asp-for="login" type="text" class="form-control form-control-lg" placeholder="Seu Login" name="login">
                     </div>
                     <div class="form-group">
                       <input asp-for="senha" type="password" class="form-control form-control-lg" placeholder="Digite sua senha" name="senha" 
  data-toggle="tooltip" data-placement="right" title="Sua senha nÃ£o Divulgada">
                     </div>
                     
                     <input type="submit" class="btn btn-secondary  " value="Entrar" name="">

                  </div>
              </div>
          </form>
      </div>
  </section>


